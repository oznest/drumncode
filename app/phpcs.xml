<?xml version="1.0"?>
<ruleset name="Symfony PSR12">
    <description>PSR-12 Coding Standard</description>

    <!-- Include PSR-12 standard -->
    <rule ref="PSR12" />

    <!-- Directories to check -->
    <file>src</file>
    <file>tests</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>
</ruleset>